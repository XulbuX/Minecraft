{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "sign-design",
  "version": "1.0.0",
  "identifier": "com.xulbux.signdesign",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [{
      "title": "Sign Design â€¢ XulbuX",
      "theme": "Dark",
      "width": 700,
      "height": 650,
      "minWidth": 325,
      "minHeight": 600,
      "center": true,
      "resizable": true,
      "fullscreen": false,
      "decorations": true,
      "transparent": false
    }],
    "security": { "csp": null }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/512x512.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.svg"
    ]
  }
}
